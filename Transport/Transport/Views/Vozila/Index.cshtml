@model IEnumerable<Transport.Models.Vozilo>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Tip
                </th>
                <th>
                   Marka
                </th>
                <th>
                    Boja
                </th>
                <th>
                    RegistarskaOznaka
                </th>
                <th>
                    Ekolosko
                </th>
            <th>
                Prijevoznik
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistarskaOznaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ekolosko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPrijevoznikNavigation.IdKorisnik)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <input type="hidden" name="IdMisija" value="@item.Id" />
                    <button type="submit" class="delete btn-link" title="Delete">Obriši</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
