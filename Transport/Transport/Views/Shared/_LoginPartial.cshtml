@using Microsoft.AspNetCore.Identity
@using Transport.Models


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="ProfiliKorisnika" asp-action="MojProfil" title="Manage">Moj profil</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Odjava</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registracija</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Prijava</a></li>
    </ul>
}
